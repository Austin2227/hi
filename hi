  <script>
    const ACC_KEY = 'awesome_accounts_v2';
    let accounts = JSON.parse(localStorage.getItem(ACC_KEY)||'[]');
    if(accounts.length===0){
      const demo = [
        {name:'Demo User', email:'user1@gmail.com', password:'demo123', plan:'Free', created:new Date().toISOString()},
        {name:'Tester', email:'test@gmail.com', password:'demo123', plan:'Paid', created:new Date().toISOString()}
      ];
      accounts = demo; localStorage.setItem(ACC_KEY, JSON.stringify(accounts));
    }
    let currentUser = null;

    function showSignin(){
      document.getElementById('authStage').style.display='flex';
      document.getElementById('signinCard').style.display='block';
      document.getElementById('signupCard').style.display='none';
      document.getElementById('dashboard').style.display='none';
      document.getElementById('signinError').textContent='';
      document.getElementById('signupMsg').textContent='';
    }

    function showSignup(){
      document.getElementById('authStage').style.display='flex';
      document.getElementById('signinCard').style.display='none';
      document.getElementById('signupCard').style.display='block';
      document.getElementById('dashboard').style.display='none';
      document.getElementById('signinError').textContent='';
      document.getElementById('signupMsg').textContent='';
    }

    function signinHandler(form){
      const email=form.email.value.trim().toLowerCase();
      const pwd=form.password.value;
      const err=document.getElementById('signinError');
      const acc=accounts.find(a=>a.email===email);
      if(!acc){err.textContent='Invalid Gmail. Please sign up first.'; return;}
      if(acc.password!==pwd){err.textContent='Incorrect password.'; return;}
      currentUser=email;
      sessionStorage.setItem('currentUser', email);
      showDashboard(email);
    }

    function signupHandler(form){
      const name=form.name.value.trim();
      const email=form.email.value.trim().toLowerCase();
      const pwd=form.password.value;
      if(accounts.some(a=>a.email===email)){alert('Email already registered. Please sign in.'); showSignin(); return;}
      accounts.push({name,email,password:pwd,plan:'Free',created:new Date().toISOString()});
      localStorage.setItem(ACC_KEY, JSON.stringify(accounts));
      form.reset();
      document.getElementById('signupMsg').textContent='Account created successfully! Please sign in.';
    }

    function showDashboard(email){
      const acc=accounts.find(a=>a.email===email); if(!acc)return showSignin();
      document.getElementById('authStage').style.display='none';
      document.getElementById('dashboard').style.display='block';
      document.getElementById('dashWelcome').textContent=`Welcome, ${acc.name}!`;
      document.getElementById('dashEmail').textContent=acc.email;
      document.getElementById('profileName').textContent=acc.name;
      document.getElementById('profileEmail').textContent=acc.email;
      document.getElementById('profilePlan').textContent=acc.plan;
      document.getElementById('profileSince').textContent=new Date(acc.created).toLocaleDateString();
      document.getElementById('asideEmail').textContent=acc.email;
      document.getElementById('asidePlan').textContent=acc.plan;
      document.getElementById('asideSince').textContent=new Date(acc.created).toLocaleDateString();
    }

    function logout(){currentUser=null; sessionStorage.removeItem('currentUser'); showSignin();}

    // check session on load
    document.addEventListener('DOMContentLoaded',()=>{
      const s=sessionStorage.getItem('currentUser');
      if(s && accounts.some(a=>a.email===s)){currentUser=s; showDashboard(s);} else showSignin();
    });

    // Modal and dashboard edit/change plan functions remain unchanged
    const modalBackdrop=document.getElementById('modalBackdrop');
    const modalContent=document.getElementById('modalContent');
    function openEditProfile(){if(!currentUser)return; const acc=accounts.find(a=>a.email===currentUser); modalContent.innerHTML=`<h3>Edit Profile</h3><p class="muted">Change your name or password.</p><form onsubmit="event.preventDefault(); submitEditProfile(this)"><input name="name" value="${acc.name}"
